@model src.Models.Organization
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Employees";
    ApplicationUser appUser = await UserManager.GetUserAsync(User);
    if (appUser.Role == "Employee")
    {
        Layout = "_LayoutAdminlteEmployee";
    }
    else if (appUser.Role == "Admin")
    {
        Layout = "_LayoutAdminlteAdmin";
    }
    else if (appUser.Role == "Manager")
    {
        Layout = "_LayoutAdminlteManager";
    }
}

<!-- Content Header (Page header) -->
<!-- Main content -->
@if (appUser.Role == "Employee")
{
    <section class="content">
        <div class="row">
            <div class="col-lg-12">
                <div class="box box-primary">
                    <div class="box-body">
                        <div class="row">
                            <div class="col-lg-12">
                                @*<input type="hidden" asp-for="@Model.organizationId" />*@
                                <table id="grid" name="grid" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th class="col-md-1">Id</th>
                                            <th class="col-md-1">Name</th>
                                            <th class="col-md-1">Email address</th>
                                            <th class="col-md-1">Phone number</th>
                                            <th class="col-md-1">Birthdate</th>
                                            <th class="col-md-1">Address</th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

        </div>

    </section>
}

else if (appUser.Role == "Admin")
{
    <section class="content">
        <div class="row">
            <div class="col-lg-12">
                <div class="box box-primary">
                    <div class="box-body">
                        <div class="row">
                            <div class="col-lg-12">
                                @*<input type="hidden" asp-for="@Model.organizationId" />*@
                                <table id="grid" name="grid" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th class="col-md-1">Id</th>
                                            <th class="col-md-1">Name</th>
                                            <th class="col-md-1">Email address</th>
                                            <th class="col-md-1">Phone number</th>
                                            <th class="col-md-1">Birthdate</th>
                                            <th class="col-md-1">Address</th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

        </div>

    </section>
}

else if (appUser.Role == "Manager")
{
    <section class="content">
        <div class="row">
            <div class="col-lg-12">
                <div class="box box-primary">
                    <div class="box-body">
                        <div class="row">
                            <div class="col-lg-12">
                                @*<input type="hidden" asp-for="@Model.organizationId" />*@
                                <table id="grid" name="grid" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th class="col-md-1">Id</th>
                                            <th class="col-md-1">Name</th>
                                            <th class="col-md-1">Email address</th>
                                            <th class="col-md-1">Phone number</th>
                                            <th class="col-md-1">Birthdate</th>
                                            <th class="col-md-1">Address</th>
                                            <th class="col-md-1">Action</th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

        </div>

    </section>
}

<!-- /.content -->
<!--modal placeholder-->
<div class="modal modal-primary fade" id="modalDefault">
    <div class="modal-dialog">
        <div class="modal-content">

        </div>
    </div>
</div>



@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
    @if (appUser.Role == "Employee" || appUser.Role == "Admin")
    {
        <script src="~/js/views/employees/employee.js"></script>
    }
    else if (appUser.Role == "Manager")
    {
        <script src="~/js/views/employees/index.js"></script>
    }
}

