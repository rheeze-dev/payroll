@model src.Models.Organization
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Salary Ledger";
    ApplicationUser appUser = await UserManager.GetUserAsync(User);
    if (appUser.Role == "Employee")
    {
        Layout = "_LayoutAdminlteEmployee";
    }
    else if (appUser.Role == "Admin")
    {
        Layout = "_LayoutAdminlteAdmin";
    }
    else if (appUser.Role == "Manager")
    {
        Layout = "_LayoutAdminlteManager";
    }
}

<!-- Content Header (Page header) -->
<!-- Main content -->

<section class="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="box box-primary">
                <div class="box-body">
                    <div class="row">
                        <div class="col-lg-12">
                            @*<input type="hidden" asp-for="@Model.organizationId" />*@
                            <table id="grid" name="grid" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th class="col-md-1">Id number</th>
                                        <th class="col-md-1">Name</th>
                                        <th class="col-md-1">Action</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>

</section>

<!-- /.content -->
<!--modal placeholder-->
<div class="modal modal-primary fade" id="modalDefault">
    <div class="modal-dialog">
        <div class="modal-content">

        </div>
    </div>
</div>



@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script src="~/js/views/salaryLedger/index.js"></script>

}

