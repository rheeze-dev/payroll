@model src.Models.SalaryLedger
@{
    Layout = null;
}
<style>

    .default {
        display: none;
    }
</style>
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title">Add deductions</h4>
</div>

<form onsubmit="return SubmitAddEdit(this)">
    <div class="box-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        @*<input type="text" asp-for="IdNumber" />
        <input type="text" asp-for="FullName" />*@
        @*<input type="text" asp-for="Email" />*@

        <div class="form-group">
            <label asp-for="DateAndTime" class="control-label">Date: </label>
            <label class="text-warning">@Model.DateAndTime.Value.ToString("MMMM yyyy")</label>
        </div>

        <div class="row">
            <div class="form-group col-lg-6">
                <label asp-for="IdNumber" class="control-label"></label>
                <input asp-for="IdNumber" class="form-control" readonly />
                <span asp-validation-for="IdNumber" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-6">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" readonly />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="form-group col-lg-6">
                <label asp-for="Charges1" class="control-label"></label>
                <input asp-for="Charges1" class="form-control" />
                <span asp-validation-for="Charges1" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-6">
                <label asp-for="CashOut" class="control-label"></label>
                <input asp-for="CashOut" class="form-control" />
                <span asp-validation-for="CashOut" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="form-group col-lg-6">
                <label asp-for="SalaryLoan" class="control-label"></label>
                <input asp-for="SalaryLoan" class="form-control" />
                <span asp-validation-for="SalaryLoan" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-6">
                <label asp-for="PaymentPlan" class="control-label"></label>
                <select id="cars" asp-for="PaymentPlan" class="form-control">
                    <option selected disabled>PaymentPlan...</option>
                    @*<option value="1">1 Give</option>*@
                    <option value="3">3 Gives</option>
                    <option value="6">6 Gives</option>
                    <option value="9">9 Gives</option>
                    <option value="12">12 Gives</option>
                </select>
                <span asp-validation-for="PaymentPlan" class="text-danger"></span>
            </div>
        </div>

    </div>

        <div class="box-footer">
            <button type="submit" class="btn btn-primary pull-right"><i class="fa fa-save"></i> Submit</button>
            <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancel</button>
        </div>
</form>
<script>
    Ladda.bind('.btn', { timeout: 1000 });
</script>



